<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment_music">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GETTING BORED LET US FIND A MOVIE FOR YOU :))"
            android:textStyle="bold"
            android:layout_margin="20dp"
            android:textSize="25sp"
            android:gravity="center"
            android:fontFamily="@font/aclonica"
            android:layout_above="@+id/fbtn"/>

        <info.hoang8f.widget.FButton
            android:layout_margin="20dp"
            android:id="@+id/fbtn"
            android:layout_above="@+id/card"
            android:text="LETS GO"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <androidx.cardview.widget.CardView
            android:layout_alignParentBottom="true"
            android:layout_margin="20dp"
            android:id="@+id/card"
            android:padding="5dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="320dp">

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MOVIE"
                    android:id="@+id/movie"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/statusbarcolor"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="Release Year"
                        android:textSize="18sp"
                        />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:id="@+id/year"
                        android:textAlignment="textEnd"
                        android:textSize="18sp"
                        android:textColor="#436EEE"
                        android:fontFamily="sans-serif-light"
                        android:textStyle="bold"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/statusbarcolor"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="Certification"
                        android:textSize="18sp"
                        />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:id="@+id/certify"
                        android:textAlignment="textEnd"
                        android:textSize="18sp"
                        android:textColor="#436EEE"
                        android:fontFamily="sans-serif-light"
                        android:textStyle="bold"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/statusbarcolor"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:id="@+id/gen"
                        android:text="Genre"
                        android:textSize="18sp"
                        />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:layout_toRightOf="@+id/gen"
                        android:id="@+id/genre"
                        android:textAlignment="textEnd"
                        android:textSize="18sp"
                        android:textColor="#436EEE"
                        android:fontFamily="sans-serif-light"
                        android:textStyle="bold"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/statusbarcolor"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="Runtime"
                        android:textSize="18sp"
                        />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:id="@+id/runtime"
                        android:textAlignment="textEnd"
                        android:textSize="18sp"
                        android:textColor="#436EEE"
                        android:fontFamily="sans-serif-light"
                        android:textStyle="bold"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/statusbarcolor"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="IMDb rating"
                        android:textSize="18sp"
                        />

                    <TextView
                        android:id="@+id/imdb"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:fontFamily="sans-serif-light"
                        android:text="-"
                        android:textAlignment="textEnd"
                        android:textColor="#436EEE"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/statusbarcolor"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:id="@+id/ov"
                        android:text="Overview"
                        android:textSize="18sp"
                        />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:layout_toRightOf="@+id/ov"
                        android:id="@+id/overview"
                        android:textAlignment="textEnd"
                        android:textSize="18sp"
                        android:textColor="#436EEE"
                        android:fontFamily="sans-serif-light"
                        android:textStyle="bold"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/statusbarcolor"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="MetaScore"
                        android:textSize="18sp"
                        />

                    <TextView
                        android:id="@+id/metascore"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:fontFamily="sans-serif-light"
                        android:text="-"
                        android:textAlignment="textEnd"
                        android:textColor="#436EEE"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/statusbarcolor"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="Director"
                        android:textSize="18sp"
                        />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:id="@+id/director"
                        android:textAlignment="textEnd"
                        android:textSize="18sp"
                        android:textColor="#436EEE"
                        android:fontFamily="sans-serif-light"
                        android:textStyle="bold"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/statusbarcolor"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    />

            </LinearLayout>


        </ScrollView>




        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/aclonica"
            android:textStyle="bold"
            android:text="FIND THE MOVIES HERE"/>

        <LinearLayout
            android:layout_below="@id/card"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="horizontal"
            android:weightSum="2">
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/ask4movies"
                android:layout_weight="1"
                android:elevation="6dp"
                app:cardCornerRadius="5dp"
                android:layout_margin="20dp"
                app:cardBackgroundColor="#60AFFE"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:src="@drawable/aaa"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:elevation="6dp"
                app:cardCornerRadius="5dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/fmovies"
                app:cardBackgroundColor="#436EEE"
                android:layout_margin="20dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ffffffffmov"
                    android:padding="10dp"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DO YOU LIKE MEMES??"
            android:textSize="25sp"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="@font/aclonica"/>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/meme"
            android:layout_margin="20dp"
            app:cardCornerRadius="5dp"
            android:layout_gravity="center">

            <ImageView
                android:scaleType="centerCrop"
                android:layout_width="240dp"
                android:layout_height="200dp"
                android:src="@drawable/newmeme" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>
    </ScrollView>
</FrameLayout>