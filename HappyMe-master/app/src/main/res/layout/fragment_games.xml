<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_games">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- TODO: Update blank fragment layout -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/gggggif" />
            <pl.droidsonroids.gif.GifImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/gggggif"
                android:layout_marginLeft="310dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/console"
                android:layout_marginLeft="175dp"
                android:layout_marginTop="10dp"

                />


            <TextView
                android:id="@+id/games_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Games"
                android:paddingBottom="20dp"
                android:paddingTop="10dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginTop="75dp"
                android:background="#FF8C00"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scribble"
                android:layout_below="@id/games_fragment"
                android:columnCount="1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:rowCount="1">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:id="@+id/skribbl"
                    app:cardBackgroundColor="#FAFDF3"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical">

                        <pl.droidsonroids.gif.GifImageView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:src="@drawable/skribbl"
                            android:background="#FBFBFB"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#fed8b1"
                            android:gravity="center"
                            android:text="SKRIBBL"
                            android:textColor="#021532"
                            android:textSize="20dp" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>


            </GridLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/uno"
                android:layout_below="@id/scribble"
                android:columnCount="1"
                android:layout_marginBottom="10dp"
                android:rowCount="1">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical">

                        <pl.droidsonroids.gif.GifImageView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:background="#FBFBFB"
                            android:scaleType="fitXY"
                            android:src="@drawable/unno"
                            app:cardBackgroundColor="#FAFDF3" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="UNO"
                            android:gravity="center"
                            android:textSize="20dp"
                            android:textColor="#021532"
                            android:background="#fed8b1"/>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>


            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/chess"
                android:layout_below="@id/uno"
                android:columnCount="1"
                android:layout_marginBottom="10dp"
                android:rowCount="1">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical">

                        <pl.droidsonroids.gif.GifImageView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:background="#FBFBFB"
                            android:scaleType="fitXY"
                            android:src="@drawable/chessy"
                            app:cardBackgroundColor="#FAFDF3" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="CHESS"
                            android:textSize="20dp"
                            android:textColor="#021532"
                            android:background="#fed8b1"/>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>


            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/poker"
                android:layout_below="@id/chess"
                android:columnCount="1"
                android:layout_marginBottom="10dp"
                android:rowCount="1">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical">

                        <pl.droidsonroids.gif.GifImageView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:background="#FBFBFB"
                            android:scaleType="centerInside"
                            android:src="@drawable/poker"
                            app:cardBackgroundColor="#FAFDF3" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="POKER"
                            android:textSize="20dp"
                            android:textColor="#021532"
                            android:background="#fed8b1"
                            />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>


            </GridLayout>



        </RelativeLayout>
    </ScrollView>

</FrameLayout>